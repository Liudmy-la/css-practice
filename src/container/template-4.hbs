{{>headerTs}}

{{#with main}}
	<div class="hero">
		<img src="{{image}}" alt="Hero image" class="hero_image">

		<div class="hero_content">
			<h1 class="hero_title">
				{{heading}}
			</h1>
			<p class="hero_text">
				{{descriotion}}
			</p>
			<a href="{{href}}" class="button hero_button">{{button}}</a>
		</div>
	</div>
{{/with}}

<main class="blog">
	{{#each featured}}		
		<div class="card">
			<div class="card_image" style="background-image: url({{photo}})"></div>
			<h2 class="card_title">{{heading}}</h2>
			<p class="card_text">{{info}}</p>
			<a href="{{linkUrl}}" class="button card_button">{{linkText}}</a>
		</div>
	{{/each}}
</main>


<div class="form">
	{{#each actions}}
		<div class="form_item">
			<label class="form_title">{{heading}}</label>
			<a href="{{url}}" class="button form_button">{{text}}</a>
		</div>
	{{/each}}
</div>

{{> footerTs}}